    grid.Pager(WebGridPagerModes.FirstLast);
    var totalPages = (int)Math.Ceiling((double)grid.TotalRowCount / grid.RowsPerPage);

    // Get the current page number
    var currentPage = grid.PageIndex + 1;

    // Calculate the first and last page numbers
    var firstPage = 1;
    var lastPage = totalPages;

    // Set the desired page numbers for first and last buttons
    var firstButtonPage = firstPage;
    var lastButtonPage = lastPage;

    // Handle case when there are no records
    if (totalPages == 0)
    {
        firstButtonPage = 0;
        lastButtonPage = 0;
    }

    int currentPageIndex = grid.PageIndex + 1;
    if (currentPageIndex <= 0)
    {
        currentPageIndex = 1;
    }
    WebGrid grid1 = new WebGrid(source: Model.list2, canPage: true, rowsPerPage: 10, selectionFieldName: "selectedrow");
