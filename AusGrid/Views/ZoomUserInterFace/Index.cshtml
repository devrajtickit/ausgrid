    var firstButtonPage1 = firstPage1;
    var lastButtonPage1 = lastPage1;

    // Handle case when there are no records
    if (totalPages1 == 0)
    {
        firstButtonPage1 = 0;
        lastButtonPage1 = 0;
    }

}

